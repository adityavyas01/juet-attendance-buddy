# Environment Configuration
NODE_ENV=development
PORT=3000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/juet_attendance
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/juet_attendance

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_URL_PROD=redis://username:password@redis-server:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=30d

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@juet.ac.in

# WebKiosk Configuration
WEBKIOSK_BASE_URL=https://webkiosk.juet.ac.in
WEBKIOSK_LOGIN_URL=https://webkiosk.juet.ac.in/CommonFiles/UserAction.jsp
WEBKIOSK_CAPTCHA_URL=https://webkiosk.juet.ac.in/CommonFiles/Captcha.jsp

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Encryption
ENCRYPTION_KEY=32-character-encryption-key-here

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,https://853bda5c-2c52-4eb6-958b-c6b1e6170650.lovableproject.com

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn-here

# Background Jobs
SYNC_INTERVAL_MINUTES=60
CLEANUP_INTERVAL_HOURS=24
